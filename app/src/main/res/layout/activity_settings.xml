<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".settings.SettingsActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/settings_background_02"
        android:backgroundTint="#55000000"
        android:backgroundTintMode="src_over"
        >

        <lpu.semesterseven.project.components.toolbar.SettingsToolBar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="64dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Network checks"
                android:textSize="@dimen/page_title_size"
                android:textStyle="bold"
                android:textColor="@color/white"
                />

            <include layout="@layout/layout_divider"/>

            <ImageButton
                android:id="@+id/btnNetwork"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:src="@drawable/baseline_phonelink_24"
                app:tint="@color/white"
                android:backgroundTint="@color/primary"
                />

        </LinearLayout>

        <include layout="@layout/footer_app_footer"/>

    </LinearLayout>
</layout>