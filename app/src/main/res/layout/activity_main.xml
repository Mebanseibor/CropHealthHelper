<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity">
    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        
        <lpu.semesterseven.project.components.toolbar.MainToolBar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <FrameLayout
            android:id="@+id/headlinesFrameLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <include layout="@layout/layout_divider"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingHorizontal="64dp"
            android:paddingVertical="16dp"
            android:gravity="center"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Getting Help"
                android:textSize="@dimen/page_title_size"
                android:textStyle="bold"
                />

            <include layout="@layout/layout_divider"/>

            <ImageButton
                android:id="@+id/btnGallery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:src="@drawable/baseline_photo_library_24"
                app:tint="@color/white"
                android:backgroundTint="@color/primary"
                />

            <ImageButton
                android:id="@+id/btnHelpLines"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:src="@drawable/baseline_contact_phone_24"
                app:tint="@color/white"
                android:backgroundTint="@color/primary"
                />

            <Button
                android:id="@+id/btnTest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="Test"
                android:backgroundTint="@color/primary"
                />

            <Button
                android:id="@+id/btnMusicPlayer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="Music Player"
                android:backgroundTint="@color/primary"
                />

            <Button
                android:id="@+id/btnDownloader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="Downloader"
                android:backgroundTint="@color/primary"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tools"
                android:textSize="@dimen/page_title_size"
                android:textStyle="bold"
                />

            <include layout="@layout/layout_divider"/>

            <ImageButton
                android:id="@+id/btnNotes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:src="@drawable/baseline_notes_24"
                app:tint="@color/white"
                android:backgroundTint="@color/primary"
                />

        </LinearLayout>

    </LinearLayout>
</layout>