<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity">
    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/home_background_01"
        android:backgroundTint="#55000000"
        android:backgroundTintMode="src_over"
        >
        
        <lpu.semesterseven.project.components.toolbar.MainToolBar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/homepage_purpose"
            android:textSize="@dimen/content_title_size"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:background="@color/primary"
            android:padding="@dimen/page_title_padding"
            />

        <FrameLayout
            android:id="@+id/headlinesFrameLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <include layout="@layout/layout_divider"/>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardUseCompatPadding="true"
            android:layout_marginHorizontal="32dp"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:padding="20dp"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Getting Help"
                    android:textSize="@dimen/page_title_size"
                    android:textStyle="bold"
                    />

                <include layout="@layout/layout_divider"/>

                <ImageButton
                    android:id="@+id/btnGallery"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:src="@drawable/baseline_photo_library_24"
                    app:tint="@color/white"
                    android:backgroundTint="@color/primary"
                    />

                <ImageButton
                    android:id="@+id/btnHelpLines"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:src="@drawable/baseline_contact_phone_24"
                    app:tint="@color/white"
                    android:backgroundTint="@color/primary"
                    />

                <Button
                    android:id="@+id/btnTest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:text="Test"
                    android:backgroundTint="@color/primary"
                    />

                <Button
                    android:id="@+id/btnMusicPlayer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:text="Music Player"
                    android:backgroundTint="@color/primary"
                    />

                <Button
                    android:id="@+id/btnDownloader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:text="Downloader"
                    android:backgroundTint="@color/primary"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tools"
                    android:textSize="@dimen/page_title_size"
                    android:textStyle="bold"
                    />

                <include layout="@layout/layout_divider"/>

                <ImageButton
                    android:id="@+id/btnNotes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:src="@drawable/baseline_notes_24"
                    app:tint="@color/white"
                    android:backgroundTint="@color/primary"
                    />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</layout>